package co.ceiba.parking.modelo.servicio.prueba;

import co.ceiba.parking.modelo.servicio.Parking;
import co.ceiba.parking.modelo.servicio.Vehiculo;

public class InterfaceParkingImplem implements InterfaceParking {
	Parking parqueadero = new Parking();
	Vehiculo pruebaCarro = new Vehiculo(500, "carro", "AGH562");
	Vehiculo pruebaMoto = new Vehiculo(800, "Moto", "TGH562");

	@Override
	public void ingresoVehiculo(String tipoVehiculo, String placa) {
		if(pruebaCarro.getTipo() == "carro") {
			parqueadero.setCeldaCarro(parqueadero.getCeldaCarro()-1);
		}else {
			parqueadero.setCeldaMoto(parqueadero.getCeldaMoto());
		}
	}

	@Override
	public Integer calcularPago() {
		return null;
	}

	@Override
	public String salidaVehiculo() {
		return null;
	}

	@Override
	public String disponibilidadVehiculos() {
		if (pruebaCarro.getTipo() == "carro" && parqueadero.getCeldaCarro()==0) {
			return "NO HAY CUPOS PARA CARROS";
	    }else if (pruebaCarro.getTipo() == "moto" && parqueadero.getCeldaMoto()==0){
	        return "No hay cupos para motos";
	    }else {
	        return "Puede ingresar el vehiculo";
	    }
	}

}
